<!DOCTYPE html>
<html>
<head>
  <title><%= t(:site_title)%></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-static-top">
	<div class="navbar-header">
		<%= link_to raw("<i class='icon-home icon-white'></i> AMAZON"), root_path, class:'navbar-brand' %>
  </div>
    <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t(:books), books_path %></li>
        <li><%= link_to t(:top_rated), top_rated_books_path %></li>
        <li><%= link_to t(:categories), categories_path %></li>
        <li><%= link_to t(:authors), authors_path %></li>
        <% if customer_signed_in? %>
          <li><%= link_to t(:orders), orders_path %></li>
        <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right">
  		<% if customer_signed_in? %>
        <% if can? :manage, rails_admin %>
          <li class='active'><%= link_to raw("<i class='icon-cog icon-white'></i> #{t(:admin_panel)}"), rails_admin_path %></li>
        <% end %>
        <% klass = current_customer.has_anything_in_cart? ? 'active' : '' %>
        <li class="<%= klass %>"><%= link_to raw("<i class='icon-shopping-cart icon-white'></i> #{t(:cart)} <span class='badge'>#{current_customer.order_items.in_cart.count}</span>"), new_order_path %></li>
  			<li><%= link_to raw("<i class='icon-user icon-white'></i> #{t(:profile)} (#{current_customer.email})"), edit_customer_registration_path %></li>
  			<li><%= link_to raw("<i class='icon-off icon-white'></i> #{t(:sign_out)}"), destroy_customer_session_path, :method => :delete %></li>
  		<% else %>
  			 <li><%= link_to raw("<i class='icon-plus icon-white'></i> #{t(:sign_up)}"), new_customer_registration_path %></li>
         <li><%= link_to raw("<i class='icon-ok icon-white'></i> #{t(:sign_in)}"), new_customer_session_path %></li>
         <li><%= link_to raw("<i class='icon-magnet icon-white'></i> #{t(:sign_in_facebook)}"), customer_omniauth_authorize_path(:facebook)%></li>
  		<% end %>
    </ul>
</nav>
<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><center><%= notice %></center></div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><center><%= alert %></center></div>
<% end %>
<%= yield %>
</body>
</html>
