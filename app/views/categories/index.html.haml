.container
  %center 
    %h2= t(:categories)
    %table.table.table-hover.table-little
      %thead
        %tr.success
          %th.text-center= t(:category_name)
          %th.text-center= t(:number_of_books)
        %tbody
          - @categories.each do |cat|
            %tr.text-center
              %td
                %strong= link_to "#{cat.title}", category_path(cat), method: :get
              %td= cat.number_of_books