= form_for @author do |author|
  = render partial: "errors/errors", locals: {object: author.object}
  .panel.panel-info.panel-little#cc
    .panel-heading
      %h4== Editing "#{@author.full_name}" info:
    .panel-body
      %h5
        %label.control-label== Firstname: #{author.text_field :firstname, class: 'form-control'}
        %br
        %br
        %label.control-label== Lastname: #{author.text_field :lastname, class: 'form-control'}
        %br
        %br
        %label.control-label== Biography : #{author.text_area :biography, size: "24x6", placeholder:"Type author biography here...", class: 'form-control'}
        %br
        %br
        = author.submit 'Update author', class: 'btn btn-success'
