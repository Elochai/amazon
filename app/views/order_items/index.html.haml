.container
  %center 
    %h2 Our books:
    %table.table.table-hover.table-small
      %thead
        %tr.success
          %th.text-center Title
          %th.text-center Author
          %th.text-center Category
          %th.text-center Price
          %th.text-center In stock
        %tbody
          - @books.each do |book|
            %tr.text-center
              %td= link_to "#{book.title}", book_path(book), method: :get
              %td= book.author
              %td.small= book.category
              %td.little= number_to_currency(book.price)
              %td.little= book.in_stock
  %center
    - if customer_signed_in? && current_customer.admin
      =link_to 'Add book', new_book_path, class: 'btn btn-primary'
